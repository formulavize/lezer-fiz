{
  "name": "@formulavize/lezer-fiz",
  "version": "1.0.0",
  "description": "fiz grammar for lezer",
  "main": "dist/index.cjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.es.js",
    "require": "./dist/index.cjs"
  },
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@lezer/highlight": "^1.2.1",
    "@lezer/lr": "^1.4.2"
  },
  "devDependencies": {
    "@lezer/generator": "^1.8.0",
    "chokidar-cli": "^3.0.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "prettier": "^3.6.2",
    "rollup": "^4.45.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rollup -c",
    "build:watch": "chokidar 'src/**/*' -c 'pnpm build'",
    "test": "mocha test/test-*.js",
    "test:watch": "chokidar '{dist,test}/**/*.{js,txt}' -c 'pnpm test'",
    "format": "prettier .  --write",
    "dev": "run-p *:watch",
    "all": "run-s build test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formulavize/lezer-fiz.git"
  },
  "author": "anthologen",
  "license": "MIT",
  "homepage": "https://github.com/formulavize/lezer-fiz#readme"
}
