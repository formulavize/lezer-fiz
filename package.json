{
  "name": "@formulavize/lezer-fiz",
  "version": "0.3.0",
  "description": "fiz grammar for lezer",
  "main": "dist/index.cjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.es.js",
    "require": "./dist/index.cjs"
  },
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@lezer/highlight": "^1.2.1",
    "@lezer/lr": "^1.4.2"
  },
  "devDependencies": {
    "@lezer/generator": "^1.7.1",
    "chokidar-cli": "^3.0.0",
    "mocha": "^10.8.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rollup": "^4.25.0"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "npm run build -- --watch",
    "test": "mocha test/test-*.js",
    "test:watch": "chokidar '{dist,test}/**/*.{js,txt}' -c 'npm test'",
    "format": "prettier .  --write",
    "dev": "run-p *:watch",
    "all": "run-s build test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formulavize/lezer-fiz.git"
  },
  "author": "anthologen",
  "license": "MIT",
  "homepage": "https://github.com/formulavize/lezer-fiz#readme"
}
